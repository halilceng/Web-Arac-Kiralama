@{
    ViewData["Title"] = "İletişim";
}

<style>
    /* 1. Sayfa Arka Planı ve Genel Yapı */
    .contact-page-wrapper {
        background: linear-gradient(rgba(15, 23, 42, 0.8), rgba(15, 23, 42, 0.9)), url('https://images.unsplash.com/photo-1497366754035-f200968a6e72?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80'); /* Lüks Ofis/Şehir Görseli */
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* Arka plan sabit kalsın */
        padding: 80px 0;
        min-height: 100vh; /* Tam ekran yüksekliği */
        display: flex;
        align-items: center;
    }

    /* 2. Başlık Alanı */
    .contact-header {
        text-align: center;
        margin-bottom: 50px;
        color: #fff;
    }

        .contact-header h6 {
            color: #e63946; /* Marka Kırmızısı */
            letter-spacing: 2px;
            font-weight: 700;
        }

        .contact-header h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 20px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .contact-header p {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.7);
            max-width: 600px;
            margin: 0 auto;
        }

    /* 3. Glassmorphism (Buzlu Cam) Kartlar */
    .glass-card {
        background: rgba(255, 255, 255, 0.05); /* Çok şeffaf beyaz */
        backdrop-filter: blur(15px); /* Buzlu cam efekti */
        border: 1px solid rgba(255, 255, 255, 0.1); /* İnce, şeffaf kenarlık */
        border-radius: 20px;
        padding: 40px;
        height: 100%; /* Eşit yükseklik */
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5); /* Derin gölge */
        transition: transform 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px); /* Hover'da hafif yukarı */
            border-color: rgba(230, 57, 70, 0.3); /* Kenarlık rengi değişsin */
        }

    /* 4. Sol Taraf: İletişim Bilgileri */
    .contact-info-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 35px;
    }

        .contact-info-item:last-child {
            margin-bottom: 0;
        }

    .icon-box-premium {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #e63946, #f1c40f); /* Kırmızı-Altın Gradyan */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #fff;
        margin-right: 20px;
        flex-shrink: 0; /* İkon küçülmesin */
        box-shadow: 0 10px 20px rgba(230, 57, 70, 0.3);
    }

    .contact-info-content h5 {
        font-weight: 700;
        color: #fff;
        margin-bottom: 5px;
        font-size: 1.2rem;
    }

    .contact-info-content p {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 0;
        font-size: 1rem;
        line-height: 1.6;
    }

    /* 5. Sağ Taraf: İletişim Formu */
    .contact-form-title {
        color: #fff;
        font-weight: 800;
        margin-bottom: 30px;
        font-size: 1.8rem;
    }

    .form-control-premium {
        background: rgba(255, 255, 255, 0.05);
        border: none;
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 0; /* Sadece alt çizgi */
        padding: 15px 0;
        color: #fff;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .form-control-premium::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .form-control-premium:focus {
            background: transparent;
            border-bottom-color: #e63946; /* Odaklanınca kırmızı çizgi */
            box-shadow: none;
            color: #fff;
        }

    .form-label-premium {
        color: rgba(255, 255, 255, 0.7);
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 5px;
        display: block;
    }

    /* Gönder Butonu */
    .btn-send-premium {
        width: 100%;
        padding: 15px;
        background: linear-gradient(45deg, #e63946, #c1272d);
        border: none;
        border-radius: 50px;
        color: white;
        font-weight: 800;
        font-size: 1.1rem;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 10px 25px rgba(230, 57, 70, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-send-premium:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(230, 57, 70, 0.6);
            background: linear-gradient(45deg, #ff4d4d, #e63946);
        }

        .btn-send-premium i {
            margin-left: 10px;
            transition: transform 0.3s;
        }

        .btn-send-premium:hover i {
            transform: translateX(5px) rotate(-15deg); /* Uçak ikonu hareketi */
        }

    /* Animasyon */
    .fade-in-up {
        animation: fadeInUp 1s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="contact-page-wrapper">
    <div class="container fade-in-up">

        <div class="contact-header">
            <h6 class="text-uppercase">BİZE ULAŞIN</h6>
            <h1>Sorularınız mı var?</h1>
            <p>7/24 müşteri hizmetlerimizle iletişime geçebilir veya ofisimizi ziyaret edebilirsiniz. Size yardımcı olmaktan mutluluk duyarız.</p>
        </div>

        <div class="row g-5">

            <div class="col-lg-5">
                <div class="glass-card">

                    <div class="contact-info-item">
                        <div class="icon-box-premium">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>Adresimiz</h5>
                            <p>Maslak Mah. Büyükdere Cad.<br>Sarıyer / İstanbul</p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <div class="icon-box-premium">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>Bizi Arayın</h5>
                            <p>+90 (212) 555 00 00<br>+90 (532) 555 00 00</p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <div class="icon-box-premium">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>E-Posta Gönderin</h5>
                            <p>info@arackiralama.com<br>destek@arackiralama.com</p>
                        </div>
                    </div>

                    <div class="mt-5 pt-4 border-top border-secondary text-center">
                        <p class="text-white-50 mb-3 fw-bold small">BİZİ TAKİP EDİN</p>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle me-2"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="fab fa-linkedin-in"></i></a>
                    </div>

                </div>
            </div>

            <div class="col-lg-7">
                <div class="glass-card">
                    <h3 class="contact-form-title">Mesaj Gönderin</h3>
                    <form>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label-premium">ADINIZ SOYADINIZ</label>
                                <input type="text" class="form-control-premium" placeholder="Örn: Ahmet Yılmaz" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label-premium">E-POSTA ADRESİNİZ</label>
                                <input type="email" class="form-control-premium" placeholder="Örn: ahmet@mail.com" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label-premium">KONU</label>
                                <input type="text" class="form-control-premium" placeholder="Örn: Kiralama Hakkında" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label-premium">MESAJINIZ</label>
                                <textarea class="form-control-premium" rows="5" placeholder="Size nasıl yardımcı olabiliriz?" required></textarea>
                            </div>
                            <div class="col-12 mt-5">
                                <button type="button" class="btn-send-premium" onclick="alert('Mesajınız başarıyla gönderildi! En kısa sürede dönüş yapacağız.')">
                                    MESAJI GÖNDER <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>