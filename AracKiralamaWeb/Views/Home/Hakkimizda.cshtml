@{
    ViewData["Title"] = "Hakkımızda";
}

<style>
    :root {
        --brand-red: #e63946;
        --dark-navy: #0f172a;
        --glass-white: rgba(255, 255, 255, 0.04);
        --glass-border: rgba(255, 255, 255, 0.1);
    }

    .about-wrapper {
        background-color: var(--dark-navy);
        color: #fff;
        overflow-x: hidden;
        padding-bottom: 80px;
        font-family: 'Poppins', sans-serif;
    }

    /* 1. HERO BÖLÜMÜ - DAHA DERİN PARALLAX */
    .about-hero-section {
        position: relative;
        height: 500px;
        background: linear-gradient(rgba(15, 23, 42, 0.5), var(--dark-navy)), url('https://images.unsplash.com/photo-1503376780353-7e6692767b70?auto=format&fit=crop&w=1920&q=90');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .hero-text h1 {
        font-size: 4.5rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -2px;
        background: linear-gradient(to bottom, #ffffff, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .red-line-glow {
        width: 100px;
        height: 4px;
        background: var(--brand-red);
        margin: 20px auto;
        border-radius: 10px;
        box-shadow: 0 0 15px var(--brand-red);
    }

    /* 2. HİKAYE BÖLÜMÜ - GELİŞMİŞ ESTETİK */
    .image-container-premium {
        position: relative;
        padding: 20px;
    }

    .image-border-deco {
        position: absolute;
        width: 100%;
        height: 100%;
        border: 2px solid var(--brand-red);
        border-radius: 30px;
        top: 25px;
        left: -25px;
        z-index: 0;
        opacity: 0.4;
    }

    .story-img-premium {
        position: relative;
        z-index: 1;
        border-radius: 30px;
        box-shadow: 0 30px 60px rgba(0,0,0,0.6);
        transition: all 0.5s ease;
        filter: brightness(0.9);
    }

        .story-img-premium:hover {
            transform: scale(1.02) rotate(-1deg);
            filter: brightness(1.1);
        }

    .trust-badge-modern {
        position: absolute;
        bottom: 40px;
        right: -10px;
        background: linear-gradient(45deg, var(--brand-red), #ff4d4d);
        color: white;
        padding: 15px 30px;
        border-radius: 15px;
        z-index: 2;
        font-weight: 800;
        box-shadow: 0 10px 25px rgba(230, 57, 70, 0.4);
    }

    /* 3. DEĞERLER KARTLARI - NEON & GLASS */
    .glass-card-modern {
        background: var(--glass-white);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        padding: 50px 35px;
        border-radius: 40px;
        height: 100%;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .glass-card-modern:hover {
            background: rgba(255, 255, 255, 0.07);
            border-color: rgba(230, 57, 70, 0.5);
            transform: translateY(-20px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        }

    .icon-glow-wrapper {
        width: 80px;
        height: 80px;
        background: rgba(230, 57, 70, 0.1);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        font-size: 2.2rem;
        color: var(--brand-red);
        transition: 0.4s;
    }

    .glass-card-modern:hover .icon-glow-wrapper {
        background: var(--brand-red);
        color: #fff;
        box-shadow: 0 0 30px var(--brand-red);
    }

    /* 4. İSTATİSTİKLER - MODERN ŞERİT */
    .stats-bar-premium {
        background: rgba(255, 255, 255, 0.02);
        padding: 80px 0;
        margin-top: 100px;
        border-top: 1px solid var(--glass-border);
    }

    .stat-val {
        font-size: 3.8rem;
        font-weight: 900;
        color: var(--brand-red);
        line-height: 1;
        margin-bottom: 10px;
        text-shadow: 0 0 15px rgba(230, 57, 70, 0.3);
    }

    /* ANİMASYON DÜZELTMESİ (@@ Hata çözümü dahil) */
    .fade-up-custom {
        animation: fadeUpCustom 1.2s ease-out forwards;
        opacity: 0;
    }

    @@keyframes fadeUpCustom {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="about-wrapper">
    <section class="about-hero-section">
        <div class="container hero-text fade-up-custom">
            <h6 class="text-danger fw-bold text-uppercase mb-3" style="letter-spacing: 5px;">Kurumsal Prestij</h6>
            <h1>HAKKIMIZDA</h1>
            <div class="red-line-glow"></div>
            <p class="lead text-white-50 fs-4">Lüksün ve güvenin yollarla buluştuğu nokta.</p>
        </div>
    </section>

    <div class="container mt-5">
        <div class="row align-items-center mb-5 py-5 fade-up-custom" style="animation-delay: 0.3s;">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="image-container-premium">
                    <div class="image-border-deco"></div>
                    <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&w=1000&q=80"
                         class="img-fluid story-img-premium" alt="Executive Office">
                    <div class="trust-badge-modern">
                        <i class="fas fa-gem me-2"></i> %100 Premium Kalite
                    </div>
                </div>
            </div>

            <div class="col-lg-6 ps-lg-5">
                <h6 class="text-danger fw-bold text-uppercase mb-2">BİZ KİMİZ?</h6>
                <h2 class="display-4 fw-bold mb-4">Sadece Araba Değil, <br><span style="color:var(--brand-red)">Özgürlük</span> Sunuyoruz.</h2>
                <p class="text-white-50 lead mb-4">
                    2010 yılından bu yana, müşterilerimize sadece bir araç değil, kusursuz bir yolculuk deneyimi sunmak için çalışıyoruz.
                </p>
                <p class="text-white-50 mb-4">
                    Modern filomuz ve şeffaf hizmet anlayışımızla sektörde standartları yeniden belirliyoruz. Her kontağı çevirdiğinizde hissettiğiniz o güven, bizim en büyük başarı hikayemizdir.
                </p>
                <div class="mt-4 opacity-25">
                    <i class="fas fa-signature fa-4x"></i>
                </div>
            </div>
        </div>

        <div class="row g-4 text-center mt-5 py-5 fade-up-custom" style="animation-delay: 0.6s;">
            <div class="col-md-4">
                <div class="glass-card-modern">
                    <div class="icon-glow-wrapper"><i class="fas fa-award"></i></div>
                    <h3 class="fw-bold mb-3">KALİTE</h3>
                    <p class="text-white-50">En yeni model araçlarımızı, kusursuz bakım standartları ile beğeninize sunuyoruz.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="glass-card-modern">
                    <div class="icon-glow-wrapper"><i class="fas fa-shield-alt"></i></div>
                    <h3 class="fw-bold mb-3">GÜVEN</h3>
                    <p class="text-white-50">Tam kapsamlı kasko paketleri ve 7/24 kesintisiz yol desteği ile her an yanınızdayız.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="glass-card-modern">
                    <div class="icon-glow-wrapper"><i class="fas fa-heart"></i></div>
                    <h3 class="fw-bold mb-3">TUTKU</h3>
                    <p class="text-white-50">Kiralama öncesi ve sonrasında her detayı düşünerek koşulsuz mutluluk hedefliyoruz.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-bar-premium text-center fade-up-custom" style="animation-delay: 0.9s;">
        <div class="container">
            <div class="row g-4">
                <div class="col-6 col-md-3">
                    <div class="stat-val">15+</div>
                    <p class="text-white-50 fw-bold small text-uppercase">Yıllık Tecrübe</p>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-val">500+</div>
                    <p class="text-white-50 fw-bold small text-uppercase">Araç Filosu</p>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-val">25K+</div>
                    <p class="text-white-50 fw-bold small text-uppercase">Mutlu Müşteri</p>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-val">81</div>
                    <p class="text-white-50 fw-bold small text-uppercase">Hizmet İli</p>
                </div>
            </div>
        </div>
    </div>
</div>