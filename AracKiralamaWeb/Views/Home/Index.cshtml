@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    /* 1. HERO SECTION - PREMİUM GÖRÜNÜM */
    .hero-section {
        position: relative;
        background: linear-gradient(rgba(15, 23, 42, 0.75), rgba(15, 23, 42, 0.85)), url('https://images.unsplash.com/photo-1503376780353-7e6692767b70?auto=format&fit=crop&w=1920&q=90');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        padding: 120px 0;
        color: white;
        text-align: center;
        border-radius: 0 0 50px 50px;
        margin-top: -25px; /* Menüyle birleşme */
    }

    .ls-2 {
        letter-spacing: 2px;
    }

    /* 2. BUTON TASARIMI */
    .btn-premium {
        background: linear-gradient(45deg, #e63946, #ff4d4d);
        color: white;
        border: none;
        transition: 0.4s;
        box-shadow: 0 10px 20px rgba(230, 57, 70, 0.3);
    }

        .btn-premium:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(230, 57, 70, 0.5);
            color: white;
        }

    /* 3. İSTATİSTİK VE KARTLAR */
    .feature-card {
        background: rgba(255, 255, 255, 0.03); /* Çok hafif transparan */
        backdrop-filter: blur(10px);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
            border-color: #e63946;
        }

    /* 4. CTA (Harekete Geçirici Mesaj) BÖLÜMÜ */
    .cta-section {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .cta-bg-glow {
        position: absolute;
        width: 300px;
        height: 300px;
        background: rgba(230, 57, 70, 0.1);
        filter: blur(100px);
        border-radius: 50%;
        z-index: 0;
    }

    .glow-1 {
        top: -100px;
        left: -100px;
    }

    .glow-2 {
        bottom: -100px;
        right: -100px;
    }

    /* 5. ANİMASYONLAR */
    .fade-in-up {
        animation: fadeInUp 1s ease-out forwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="hero-section shadow-lg mb-5 fade-in-up">
    <div class="container py-5">
        <h5 class="text-uppercase ls-2 text-danger fw-bold mb-3">Sınırları Zorla</h5>
        <h1 class="display-1 fw-bold mb-4">Yolculuk Başlasın</h1>
        <p class="lead fs-4 mb-5 text-light opacity-75 col-md-8 mx-auto">
            Hayalindeki aracı kiralamak hiç bu kadar kolay olmamıştı. <br>
            Güvenli, hızlı ve ekonomik çözümlerle her zaman yanındayız.
        </p>

        <a href="/Arac/Index" class="btn btn-premium btn-lg px-5 py-3 fw-bold rounded-pill fs-5">
            ARAÇLARI İNCELE <span class="ms-2">&rarr;</span>
        </a>
    </div>
</div>

<div class="container mt-5 mb-5 fade-in-up" style="animation-delay: 0.2s;">
    <div class="row text-center g-4">
        <div class="col-md-3 col-6">
            <h2 class="fw-bold text-primary display-5">50+</h2>
