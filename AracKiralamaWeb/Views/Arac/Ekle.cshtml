@model AracKiralamaWeb.Models.Arac

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Yeni Araç Ekle</h4>
                </div>
                <div class="card-body">

                    <form asp-action="Ekle" method="post">

                        <div class="mb-3">
                            <label>Marka ve Model:</label>
                            <input asp-for="MarkaModel" class="form-control" placeholder="Örn: BMW 320i" />
                            <span asp-validation-for="MarkaModel" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Plaka:</label>
                            <input asp-for="Plaka" class="form-control" placeholder="Örn: 34XYZ99" />
                            <span asp-validation-for="Plaka" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Günlük Fiyat (TL):</label>
                            <input asp-for="GunlukFiyat" type="number" class="form-control" />
                            <span asp-validation-for="GunlukFiyat" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Resim Linki (URL):</label>
                            <input asp-for="ResimUrl" class="form-control" placeholder="https://..." />
                            <span asp-validation-for="ResimUrl" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Veritabanına Kaydet</button>
                    </form>

                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
</div>