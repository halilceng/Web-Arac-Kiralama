@model IEnumerable<AracKiralamaWeb.Models.Arac>

@{
    ViewData["Title"] = "Araç Filosu";
}

<style>
    /* 1. KART TASARIMI */
    .car-card {
        border: none;
        border-radius: 20px;
        background: #fff;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        overflow: hidden;
        position: relative;
    }

        .car-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

    /* 2. RESİM ALANI */
    .img-wrapper {
        height: 220px;
        position: relative;
        overflow: hidden;
    }

    .car-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .car-card:hover .car-img {
        transform: scale(1.1);
    }

    /* Fiyat Etiketi */
    .price-tag {
        position: absolute;
        bottom: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.95);
        color: #e63946;
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 800;
        font-size: 1.1rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        backdrop-filter: blur(5px);
    }

    /* 3. KART İÇERİĞİ */
    .card-body-custom {
        padding: 20px;
    }

    .car-title {
        font-weight: 700;
        color: #2c3e50;
        font-size: 1.2rem;
        margin-bottom: 5px;
    }

    .car-plate {
        font-size: 0.9rem;
        color: #95a5a6;
        font-family: monospace;
        background: #f8f9fa;
        padding: 4px 8px;
        border-radius: 6px;
        display: inline-block;
        margin-bottom: 15px;
    }

    /* 4. BUTONLAR */
    .btn-rent {
        width: 100%;
        background: #2c3e50;
        color: white;
        border-radius: 10px;
        padding: 10px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-rent:hover {
            background: #e63946;
            color: white;
            transform: scale(1.02);
        }

    .admin-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .btn-action {
        flex: 1;
        font-size: 0.85rem;
        border-radius: 8px;
        margin: 0 5px;
    }

    /* Sayfa Animasyonu */
    .fade-in {
        animation: fadeIn 1s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container py-5 fade-in">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h6 class="text-danger fw-bold text-uppercase mb-1">FİLOMUZU KEŞFEDİN</h6>
            <h2 class="fw-bold display-6">Seçkin Araçlar, <span class="text-muted">Keyifli Yolculuklar</span></h2>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-danger rounded-pill px-4 shadow-sm fw-bold">
                <i class="fas fa-plus-circle me-2"></i> Yeni Araç Ekle
            </a>
        }
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <form asp-action="Index" method="get">
                <div class="input-group shadow-lg rounded-pill overflow-hidden border-0">
                    <span class="input-group-text bg-white border-0 ps-4">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" name="aramaMetni" class="form-control border-0 py-3"
                           placeholder="Hayalindeki aracı ara (Marka, Model veya Plaka)..."
                           value="@Context.Request.Query["aramaMetni"]"
                           style="outline: none; box-shadow: none;">

                    <button class="btn btn-danger px-4 fw-bold" type="submit">
                        ARA & BUL
                    </button>

                    @if (!string.IsNullOrEmpty(Context.Request.Query["aramaMetni"]))
                    {
                        <a asp-action="Index" class="btn btn-dark px-3 d-flex align-items-center">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="car-card shadow-sm h-100">
                    <div class="img-wrapper">
                        <img src="@(string.IsNullOrEmpty(item.ResimUrl) ? "/images/default-car.jpg" : "/images/" + item.ResimUrl)"
                             class="card-img-top car-img" alt="@item.MarkaModel">

                        <div class="price-tag">
                            @item.GunlukFiyat ₺ <small class="text-muted fw-normal" style="font-size:0.7rem">/ GÜN</small>
                        </div>
                    </div>

                    <div class="card-body-custom">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="car-title">@item.MarkaModel</h5>
                            <i class="fas fa-car-side text-muted opacity-25" style="font-size: 1.5rem;"></i>
                        </div>

                        <div class="car-plate">
                            <i class="fas fa-fingerprint me-1"></i> @item.Plaka
                        </div>

                        <a asp-action="Kirala" asp-route-plaka="@item.Plaka" class="btn btn-rent shadow-sm">
                            Hemen Kirala <i class="fas fa-arrow-right ms-2"></i>
                        </a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="admin-actions">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm btn-action fw-bold">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm btn-action fw-bold">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-3"><i class="fas fa-search"></i></div>
            <h3 class="text-muted">Aradığınız kriterlere uygun araç bulunamadı.</h3>
            <p class="text-muted">Lütfen farklı bir kelime ile tekrar deneyin.</p>
            <a asp-action="Index" class="btn btn-outline-dark mt-3 rounded-pill">Tüm Araçları Göster</a>
        </div>
    }

</div>